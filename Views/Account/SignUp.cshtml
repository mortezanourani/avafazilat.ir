@model Fazilat.Models.ViewModels.AccountSignUpViewModel

@{
    ViewData["Title"] = "ثبت نام";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-black text-center">@ViewData["Title"]</h1>
<div class="row d-flex justify-content-center">
    <div class="col-md-4 text-right m-3 mt-2 bg-white border rounded-lg shadow">
        <form id="registerForm" asp-route-returnUrl="/" method="post">
            <h6 class="text-center mt-3 alert alert-success">به خانواده آوای فضیلت بپیوندید</h6>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-floating mt-4">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control ltr" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating mt-4">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating mt-4">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating mt-4">
                @Html.LabelFor(m => m.PhoneNumber)
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control ltr" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating mt-3">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control ltr" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating mt-3">
                @Html.LabelFor(m => m.PasswordRetype)
                @Html.PasswordFor(m => m.PasswordRetype, new { @class = "form-control ltr" })
                @Html.ValidationMessageFor(m => m.PasswordRetype, "", new { @class = "text-danger mb-3" })
            </div>
            <div class="form-floating mt-3">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">ثبت نام</button>
            </div>
            <div class="mt-4">
                <p class="text-center mt-4 small">
                    <a id="login" asp-area="" asp-controller="Account" asp-action="SignIn">آوای فضیلتی هستید؟ وارد شوید.</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
