@model Fazilat.Models.Workshop

@{
    ViewData["Title"] = "فهرست ثبت نام " + Model.Title;
    Layout = "~/Areas/Account/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">ویرایش کلاس</a>

    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">حذف کلاس</a>
</p>

<table class="list-group">
    <tbody>
        @foreach (var item in Model.Learners)
        {
            <tr class="list-group-item d-flex justify-content-between align-items-end">
                <td class="d-flex flex-column">
                    <a asp-controller="Learners" asp-action="Details" asp-route-id="@item.Id">
                        <h6 class="fw-bold m-0">@Html.DisplayFor(modelItem => item.Name)</h6>
                    </a>
                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Phone)</small>
                </td>
                <td class="text-left">
                    <small class="text-primary">@Html.DisplayFor(modelItem => item.Registered)</small>
                </td>
            </tr>
        }
    </tbody>
</table>
