@model IEnumerable<Fazilat.Models.Category>

@{
    ViewData["Title"] = "فهرست آلبوم ها";
    Layout = "~/Areas/Account/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-success">ایجاد آلبوم</a>

    <a asp-controller="Media" asp-action="Add" class="btn btn-primary">افزودن تصویر</a>
</p>
<table class="list-group">
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="list-group-item d-flex justify-content-between align-items-end">
                <td class="d-flex flex-column">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <h6 class="fw-bold m-0">@Html.DisplayFor(modelItem => item.PersianName)</h6>
                    </a>
                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Name)</small>
                </td>
                <td class="text-left">
                    <a asp-action="Edit" asp-route-id="@item.Id"><small>ویرایش</small></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><small>حذف</small></a>
                </td>
            </tr>
        }
    </tbody>
</table>
