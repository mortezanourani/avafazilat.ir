@model Fazilat.Models.Category

@{
    ViewData["Title"] = "تصاویر آلبوم " + Model.PersianName;
    Layout = "~/Areas/Account/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-controller="Media" asp-action="Add" class="btn btn-success">افزودن تصویر</a>
</p>
<table class="list-group">
    <tbody>
        @foreach (var item in Model.Media)
        {
            <tr class="list-group-item d-flex justify-content-between align-items-end">
                <td class="d-flex flex-column">
                    <h6 class="fw-bold text-primary m-0">@Html.DisplayFor(modelItem => item.FileName)</h6>
                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Uploaded)</small>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.PersianName)
                </td>
                <td class="text-left">
                    <a asp-controller="Media" asp-action="Edit" asp-route-id="@item.Id"><small>تغییر آلبوم</small></a> |
                    <a asp-controller="Media" asp-action="Delete" asp-route-id="@item.Id"><small class="text-danger">حذف</small></a>
                </td>
            </tr>
        }
    </tbody>
</table>
