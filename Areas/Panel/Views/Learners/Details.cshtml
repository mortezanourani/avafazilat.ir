@model Fazilat.Models.Learner

@{
    ViewData["Title"] = "مشخصات " + Model.Name;
    Layout = "~/Areas/Account/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">حذف @Model.Name</a>
</p>

<table class="list-group mb-3">
    <tbody>
        <tr class="list-group-item d-flex justify-content-between align-items-end bg-transparent border-0 border-bottom pb-0">
            <td class="d-flex flex-column">
                <h6 class="font-weight-bold">@Html.DisplayFor(m => m.Name)</h6>
                <small class="m-0">@Html.DisplayFor(m => m.Registered)</small>
            </td>
            <td class="text-left">
                <small class="text-dark">@Html.DisplayFor(m => m.TrackingCode)</small>
            </td>
        </tr>
        <tr class="list-group-item d-flex justify-content-between align-items-middle bg-transparent border-0 py-0">
            <td class="d-flex flex-column">
                <h6 class="text-dark small m-auto"><b>@Html.DisplayFor(m => m.Phone)</b> <span class="text-muted">(@Html.DisplayFor(m => m.ParentPhone))</span></h6>
            </td>
            <td class="text-left">
                <small class="text-dark">
                    @Html.DisplayFor(m => m.City) |
                    @Html.DisplayFor(m => m.District) |
                    @Html.DisplayFor(m => m.School)
                </small>
            </td>
        </tr>
    </tbody>
</table>

<table class="list-group">
    <tbody>
        @foreach (var item in Model.Workshops)
        {
            <tr class="list-group-item d-flex justify-content-between align-items-end">
                <td class="d-flex flex-column">
                    <a asp-controller="Workshops" asp-action="Details" asp-route-id="@item.Id">
                        <h6 class="fw-bold m-0">@Html.DisplayFor(modelItem => item.Title)</h6>
                    </a>
                    @if (item.Grade == 10)
                    {
                        <small class="text-dark">پایه دهم</small>
                    }
                    else if (item.Grade == 11)
                    {
                        <small class="text-dark">پایه یازدم</small>
                    }
                    else if (item.Grade == 12)
                    {
                        <small class="text-dark">پایه دوازدهم</small>
                    }
                </td>
                <td class="text-left">
                    <small class="text-danger">@Html.DisplayFor(modelItem => item.Cost) ریال</small>
                </td>
            </tr>
        }
    </tbody>
</table>
