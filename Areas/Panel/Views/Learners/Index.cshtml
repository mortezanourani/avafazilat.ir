@model IEnumerable<Fazilat.Models.Learner>

@{
    ViewData["Title"] = "فهرست ثبت نامی ها";
    Layout = "~/Areas/Account/Views/Shared/_Layout.cshtml";
}

<table class="list-group">
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="list-group-item d-flex justify-content-between align-items-end">
                <td class="d-flex flex-column">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <h6 class="fw-bold m-0">@Html.DisplayFor(modelItem => item.Name) <small><b>(@Html.DisplayFor(modelItem => item.Workshops.Count))</b></small></h6>
                    </a>
                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Phone)</small>
                </td>
                <td class="text-left">
                    <small class="text-muted">@Html.DisplayFor(modelItem => item.TrackingCode)</small>
                </td>
            </tr>
        }
    </tbody>
</table>
