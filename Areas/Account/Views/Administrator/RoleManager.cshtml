@model RoleManagerModel
@{
    ViewData["Title"] = "سطح دسترسی";
}

@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <form id="educational-file-form" method="post">
            <div class="form-floating p-3 mb-3 border border-success rounded-lg bg-white box-shadow">
                @Html.HiddenFor(m => m.User.Id)
                @Html.LabelFor(m => m.User, new { @class = "form-label" })
                <div class="form-control d-flex justify-content-between">
                    <span>
                        @* @Html.DisplayFor(m => m.User.Information.FullName) *@
                    </span>
                    <span>
                        @Html.DisplayFor(m => m.User.UserName)
                    </span>
                </div>
            </div>
            <div class="form-floating p-3 mb-3 border border-success rounded-lg bg-white box-shadow">
                <div class="form-floating">
                    @Html.LabelFor(m => m.Roles, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.Role, 
                        new SelectList(Model.Roles.ToList(),
                        Model.Role),
                        null,
                        new { @class = "form-control" })
                </div>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-success">تایید</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
