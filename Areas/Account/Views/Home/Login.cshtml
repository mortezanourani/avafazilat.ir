@model LoginModel
@{
    ViewData["Title"] = "ورود";
}

<h1 class="text-black text-center">@ViewData["Title"]</h1>
<partial name="_StatusMessage" />
<div class="row d-flex justify-content-center">
    <div class="col-md-4 text-right m-3 mt-2 bg-white border rounded-lg shadow">
        <section>
            <form id="account" method="post">
                <h6 class="text-center mt-3 alert alert-info">به آوای فضیلت خوش آمدید</h6>
                <hr />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form-floating mt-4">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control ltr" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-floating mt-3">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control ltr" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-floating mt-3">
                    <div class="checkbox mt-3">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                        @Html.LabelFor(m => m.RememberMe, new { @class = "form-label mr-4" })
                    </div>
                </div>
                <div class="form-floating mt-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">ورود</button>
                </div>
                <div class="mt-3">
                    <p>
                        <a id="forgot-password" class="text-thin" asp-area="Account" asp-controller="Home" asp-action="ForgotPassword">رمز عبور خود را فراموش کرده اید؟</a>
                    </p>
                    <p>
                        <a id="register" asp-area="Account" asp-controller="Home" asp-action="Register">حساب کاربری ندارید؟ ثبت نام کنید.</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
