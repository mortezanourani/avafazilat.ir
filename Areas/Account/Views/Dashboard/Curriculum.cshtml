@model Fazilat.Models.Curriculum
@{
    ViewData["Title"] = Model.Title;
}

<ul class="list-group p-0">
@foreach(var course in Model.Courses)
{
    <a class="list-group-item list-group-item-action d-flex flex-column" asp-area="Account" asp-controller="Dashboard" asp-action="Course" asp-route-id="@course.Id">
        <div class="d-flex flex-row justify-content-between">
            <div>
                <h5>@Html.DisplayFor(c => course.Title)</h5>
                <p>@Html.DisplayFor(c => course.Topics, new { @class = "text-secondary" })</p>
            </div>
            @if (@course.Accomplished)
            {
                <i class="fa fa-check-square-o text-success"></i>
            }
            else
            {
                <i class="fa fa-square-o text-danger"></i>
            }
        </div>
        <div>
            @Html.DisplayFor(c => course.Descritpion)
        </div>
    </a>
}
</ul>
